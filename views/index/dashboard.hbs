<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/show/{{id}}">{{title}}</a></td>
                    <td>{{formatDate date 'MMMM Do YYYY'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td><a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i></a></td>
                    <td>
                        <form method="post" id="delete-form" action="/stories/{{id}}?_method=DELETE">
                            <input type="hidden" name="_method" value="delete">
                            <button type="submit" class="btn red"><i class="fa fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories yet.</p>
{{/if}}